<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gamebg">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btBack"
        android:layout_width="73dp"
        android:layout_height="wrap_content"
        android:layout_x="1150dp"
        android:layout_y="19dp"
        android:alpha="0.8"
        android:background="@drawable/lastt" />

    <TextView
        android:id="@+id/pagebtn3"
        android:layout_width="117dp"
        android:layout_height="69dp"
        android:layout_x="1128dp"
        android:layout_y="99dp"
        android:alpha="0.8"
        android:gravity="center"
        android:text="上一頁 Last Page"
        android:textColor="@color/white"
        android:textSize="36px" />

    <EditText
        android:id="@+id/txtSub"
        android:layout_width="382dp"
        android:layout_height="83dp"
        android:layout_x="449dp"
        android:layout_y="300dp"
        android:alpha="0.9"
        android:background="@drawable/bd_circle_shape"
        android:digits="1234567890"
        android:ellipsize="start"
        android:gravity="center"
        android:hint="快破解密碼，取得寶藏吧！"
        android:inputType="phone"
        android:singleLine="true"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btGO"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:layout_x="565dp"
        android:layout_y="422dp"
        android:background="@drawable/circle"
        android:text="GO"
        android:textColor="#871313"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="522dp"
        android:layout_y="114dp"
        android:textColor="@android:color/white"
        android:textSize="100sp"
        android:textStyle="bold" />

</AbsoluteLayout>
